@model IEnumerable<Parmacy.Shaar.Models.ViewModels.ItemLocationVM>

@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Expiration_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expiration_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                <a asp-action="Transfer" asp-route-id="@item.ItemID" asp-route-ExpirationDate="@item.Expiration_Date">Transfer</a>
                <a asp-controller="Item" asp-action="Details" asp-route-id="@item.ItemID">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
